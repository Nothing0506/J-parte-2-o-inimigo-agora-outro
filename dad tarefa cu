#include<iostream>
#include<math.h>

using namespace std;

class Tabela{//Classe que cria as opções de busca de dados e que organiza os dados em ordem decrescente
    public:
    void BusDire(int *dados, int n){
    int esco2;
        cout<<"Qual elemento voce quer buscar?"<<endl;
            cin>>esco2;
        for(int i=0; i<n; i++){
            if(esco2==dados[i]){
                cout<<"O dado "<<i+1<<" e igual a sua escolha "<<esco2<<endl;
            }
        }
}

void BusPar(int *dados, int n){
    int esco2;
        cout<<"Qual elemento voce quer buscar?"<<endl;
            cin>>esco2;
        for(int i=0; i<n; i++){
            if(esco2==dados[i]){
                cout<<"O dado "<<i+1<<" e igual a sua escolha "<<esco2<<endl;
                break;
            }
        }
}

void BusMaior(int *dados, int n){
    int maior, menor;
        for(int i=0; i<n; i++){
            if(i==0){
                maior=dados[i];
            }
            if(dados[i]>maior){
                maior=dados[i];
            }
        }
        for(int i=0; i<n; i++){
            if(i==0){
                menor=dados[i];
            }
            if(menor>dados[i]){
                menor=dados[i];
            }
        }
    cout<<"O valor MAXIMO valor e "<<maior<<" e o valor MINIMO e "<<menor<<endl;
}

void BusModa(int *dados, int n){
    int moda[n];
        for(int i=0; i<n; i++){
            for(int j=0; j<n; j++){
                if(dados[i]==dados[j]){
                    moda[j]=i;
                }
            }
        }
        for(int k=0; k<n; k++){
            if(moda[k]>0){
                cout<<"Os elementos "<<k<<" sao iguais"<<endl;
            }
        }
    }

void organizador(int *dados, int n){
    int decrescente[n],salvador,k;
        k=0;

    for(int i=0; i<n; i++){
        decrescente[i]=dados[i];//atribui os valores insieridos ao vetor crescente
    }

    do{
        for(int i=0; i<n; i++){
                salvador=decrescente[i];
        if(i>0){
            for(int j=0; j<i; j++){
                if(salvador>decrescente[i-1]){
                    decrescente[i]=decrescente[i-1];
                    decrescente[i-1]=salvador;
                }
                if(salvador=decrescente[i-1]){
                    decrescente[i-1]=decrescente[i-1];
                }
            }
          }
      }
      k++;
    }while(k<n);
        for(int j=0; j<n;j++){
            cout<<decrescente[j]<<endl;
        }
    }
};

int main(){
    int n, val,esco, resp;
    Tabela bus;
        cout<<"Quantos dados vao ser inseridos?"<<endl;
            cin>>n;
        int dados[n];
        cout<<"Insira os dados"<<endl;
        for(int i=0; i<n; i++){
            cin>>val;
            dados[i]=val;
        }
    do{
        cout<<"Como voce deseja buscar os dados?"<<endl;
            cout<<"1.Buscar sem parada"<<endl;
            cout<<"2.Buscar com parada"<<endl;
            cout<<"3.Buscar maior e menor elemento"<<endl;
            cout<<"4.Buscar moda dos elementos"<<endl;
            cout<<"5.Organizar os dados"<<endl;
        cin>>esco;

        if(esco<1 || esco>5){
            do{
                cout<<"Escolha novamente"<<endl;
                cin>>esco;
            }while(esco<1 || esco>5);
        }

             if(esco==1){
                bus.BusDire(dados, n);
            }
             if(esco==2){
                bus.BusPar(dados,n);
             }
             if(esco==3){
                bus.BusMaior(dados, n);
             }
             if(esco==4){
                bus.BusModa(dados, n);
             }
             if(esco==5){
                bus.organizador(dados,n);
             }
        cout<<"Deseja continuar?"<<endl;
        cout<<"1.Sim    2.Nao"<<endl;
            cin>>resp;
    }while(resp!=2);
    cout<<"Obrigado"<<endl;
}
